@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="banner-container text-center" style="margin-top: 50px;">
    <h1 class="banner-title display-2 ribeye-regular">Welcome to</h1>
    <h1 class="banner-title display-2 ribeye-regular">Aurora's Bricks!</h1>
    <br />
    <p>Shop our wide selection of the hottest Lego sets on the market!</p>
    <a class="btn btn-custom" asp-area="" asp-controller="Home" asp-action="Products">Shop now</a>

</div>


<body>
