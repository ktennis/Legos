@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Product

<h2 class="text-center">Confirm Delete</h2>
<h2 class="text-center">Are you sure you want to delete the product: @Model.Name?</h2>
<div class="container">
    <form method="post">
        <button type="submit" asp-action="DeleteProduct" asp-route-id="@Model.ProductId">Yes, Delete</button>
        <button asp-action="AdminProducts">Cancel</button>
    </form>
</div>

