@* @model ProductListViewModel *@
@model Product

<!DOCTYPE html>
<html>
<head>
 <title>Product Detail</title>
    <link rel="stylesheet" href="~/css/site.css"> <!-- Include your CSS file here -->
    </head>
<body>
<h2 class="ribeye-regular">@Model.Name</h2>
    <br /> 
    <div class="product-container2">
        <div>
            <img src="@Model.ImgLink" alt="@Model.Name" class="product-image2"/>
        </div>

        <div class="product-details-container">
            <div class="product-description2">
                <h4 class="ribeye-regular">Description:</h4>
                <p>@Model.Description</p>
                <!-- Add more details as needed -->
            </div>
            <div class="product-price">
                <p>Price: $@Model.Price</p>
                <form asp-page="/Cart" method="post">
                    <input type="hidden" name="productId" value="@Model.ProductId" />
                    <button type="submit" class="btn btn-cart">Add to Cart</button>
                </form>
            </div>
        </div>
    </div>
<!-- You can add more buttons or actions related to the product here -->

</body>
</html>
